pipeline {
    agent any

    environment {
        DOCKERHUB_USERNAME = 'ahmedmahmood44' // Replace with Docker Hub username
        DOCKERHUB_PASSWORD = credentials('docker-hub') // Jenkins credentials for Docker Hub
        IMAGE_NAME = 'ahmedmahmood44/app-image' // Docker image name
        OPENSHIFT_SERVER = 'https://api.ocp-training.ivolve-test.com:6443' // OpenShift API server
        OPENSHIFT_TOKEN = credentials('openshift-token') // OpenShift token stored in Jenkins credentials
    }

    stages {
        stage('Checkout Code') {
            steps {
                echo 'Checking out code from GitHub...'
                git branch: 'main', url: 'https://github.com/Ahmed-Jim1/IVolve-Training.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                echo 'Building Docker image...'
                sh "docker build -t ${IMAGE_NAME}:${env.BUILD_NUMBER} ."
            }
        }

        stage('Push to Docker Hub') {
            steps {
                echo 'Pushing Docker image to Docker Hub...'
                sh """
                    echo ${DOCKERHUB_PASSWORD} | docker login -u ${DOCKERHUB_USERNAME} --password-stdin
                    docker push ${IMAGE_NAME}:${env.BUILD_NUMBER}
                """
            }
        }

        stage('Update Deployment File') {
            steps {
                echo 'Updating image tag in deployment.yaml...'
                sh """
                    sed -i 's|image:.*|image: ${IMAGE_NAME}:${env.BUILD_NUMBER}|g' deployment.yaml
                """
            }
        }

        stage('Deploy to OpenShift') {
            steps {
                echo 'Logging in and deploying to OpenShift...'
                withCredentials([string(credentialsId: 'openshift-token', variable: 'TOKEN')]) {
                    sh """
                        oc login ${OPENSHIFT_SERVER} --token=${TOKEN} --insecure-skip-tls-verify
                        oc apply -f deployment.yaml
                    """
                }
            }
        }
    }

    post {
        success {
            echo 'Deployment Successful: Application deployed to OpenShift!'
        }
        failure {
            echo 'Deployment Failed: Check the Jenkins pipeline logs for details.'
        }
    }
}
